
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Direct and simple admin check
    function isAppAdmin() {
      return request.auth != null && (
        request.auth.token.email == 'nextinnovationafrica@gmail.com' ||
        (request.auth.token.email_verified == true && request.auth.token.email == 'nextinnovationafrica@gmail.com')
      );
    }

    // --- User-Specific Files ---
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAppAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Past questions
    match /past_questions/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAppAdmin();
    }

    // --- Public Files ---
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
