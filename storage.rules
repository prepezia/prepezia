
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // --- User-Specific Files ---
    // Users can only read and write to their own folder, which is named
    // after their unique User ID (UID).
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Past questions should be publicly readable for easy access in the app,
    // but only writable by admins.
    match /past_questions/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Public Files ---
    // Any file in the 'public/' directory is readable by anyone.
    // Writing to the public folder is disabled to prevent abuse.
    match /public/{allPaths=**} {
      allow read;
      allow write: if false;
    }
  }
}
