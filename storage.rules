
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // --- User-Specific Files ---
    // Users can only read and write to their own folder, which is named
    // after their unique User ID (UID).
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Public Files ---
    // Any file in the 'public/' directory is readable by anyone.
    // Writing to the public folder is disabled to prevent abuse.
    match /public/{allPaths=**} {
      allow read;
      allow write: if false;
    }
  }
}
