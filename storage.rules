
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isAppAdmin() {
      // Primary admin check using both Email and the verified UID from your debug console
      return request.auth != null && (
        request.auth.token.email == 'nextinnovationafrica@gmail.com' ||
        request.auth.uid == 'ppuEIMHQI4MJLYdt2QLDrupho1E2'
      );
    }

    // --- User-Specific Files ---
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAppAdmin());
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Past questions folder - accessible only by Admins for writing
    match /past_questions/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAppAdmin();
    }

    // --- Public Files ---
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
