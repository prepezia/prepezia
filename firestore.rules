
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAppAdmin() {
      return isAuthenticated() && (
        request.auth.uid == 'ppuEIMHQI4MJLYdt2QLDrupho1E2' ||
        request.auth.token.email == 'nextinnovationafrica@gmail.com' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    // Publicly readable for landing page and setup
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAppAdmin();
    }

    match /legal_content/{docId} {
      allow read: if true;
      allow write: if isAppAdmin();
    }

    match /custom_universities/{uniId} {
      // Publicly readable so campus detection and selection work during auth
      allow read: if true;
      allow write: if isAppAdmin();
    }

    // Authenticated access
    match /users/{userId} {
      allow get: if isOwner(userId) || isAppAdmin();
      allow list: if isAppAdmin();
      allow create, update: if isOwner(userId);

      match /guided_chats/{chatId} {
        allow read, write, delete, create: if isOwner(userId);
      }
    }

    match /notes/{noteId} {
        allow read, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
        allow create, update: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    match /past_questions/{questionId} {
      allow read: if isAuthenticated();
      allow write: if isAppAdmin();

      match /batches/{batchId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated(); 
      }
    }

    match /feedback/{feedbackId} {
      allow create: if isAuthenticated();
      allow read, list, update, delete: if isAppAdmin();
    }
  }
}
