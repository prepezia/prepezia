rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Legal content can be read by anyone, but only written by authenticated users.
    // The admin panel is protected by application logic.
    match /legal_content/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
