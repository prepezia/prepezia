
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAppAdmin() {
      return request.auth != null && (
        request.auth.uid == 'ppuEIMHQI4MJLYdt2QLDrupho1E2' ||
        request.auth.token.email == 'nextinnovationafrica@gmail.com' ||
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true)
      );
    }

    match /users/{userId} {
      allow get: if request.auth != null && (request.auth.uid == userId || isAppAdmin());
      allow list: if request.auth != null && isAppAdmin();
      allow create, update: if request.auth != null && request.auth.uid == userId;

      match /guided_chats/{chatId} {
        allow read, write, delete, create: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /custom_universities/{uniId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAppAdmin();
    }

    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if request.auth != null && isAppAdmin();
    }

    match /legal_content/{docId} {
      // Publicly readable so users can see terms/privacy on landing page
      allow read: if true;
      allow write: if request.auth != null && isAppAdmin();
    }
    
    match /notes/{noteId} {
        allow read, delete: if request.auth != null && resource.data.userId == request.auth.uid;
        allow create, update: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /testimonials/{testimonialId} {
      // Publicly readable for the landing page
      allow read: if true;
      allow write: if request.auth != null && isAppAdmin();
    }

    match /past_questions/{questionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isAppAdmin();

      match /batches/{batchId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null; 
      }
    }
  }
}
